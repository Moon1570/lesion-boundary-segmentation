{
  "model": {
    "name": "custom_unet",
    "in_channels": 3,
    "out_channels": 1,
    "encoder_channels": [32, 64, 128, 256],
    "bottleneck_channels": 512,
    "decoder_activation": "relu"
  },
  "data": {
    "data_dir": "data/ISIC2018_advanced",
    "splits_dir": "splits",
    "batch_size": 16,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true
  },
  "loss": {
    "name": "combined",
    "weights": {
      "bce": 0.5,
      "dice": 0.3,
      "boundary": 0.2
    },
    "sigmoid": true
  },
  "optimizer": {
    "name": "adamw",
    "lr": 0.001,
    "weight_decay": 0.01,
    "betas": [0.9, 0.999]
  },
  "scheduler": {
    "name": "cosine",
    "T_max": 150,
    "eta_min": 1e-6
  },
  "training": {
    "epochs": 150,
    "use_amp": true,
    "vis_freq": 5
  },
  "callbacks": {
    "early_stopping": {
      "patience": 25,
      "min_delta": 1e-4,
      "mode": "min"
    }
  },
  "output_dir": "runs/custom_unet_advanced"
}
