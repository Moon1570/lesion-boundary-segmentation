{
  "model": {
    "name": "lightweight_unet",
    "base_channels": 32,
    "n_channels": 3,
    "n_classes": 1
  },
  "data": {
    "data_dir": "data/ISIC2018_proc",
    "splits_dir": "splits",
    "batch_size": 16,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true,
    "use_test_split": false,
    "augmentations": {
      "enabled": true,
      "rotation": 10,
      "flip_prob": 0.5,
      "brightness": 0.05,
      "contrast": 0.05,
      "hue": 0.02,
      "saturation": 0.05,
      "elastic_transform": false,
      "gaussian_noise": 0.005
    }
  },
  "loss": {
    "name": "focal",
    "alpha": 1.0,
    "gamma": 2.0
  },
  "optimizer": {
    "name": "adam",
    "lr": 0.001,
    "weight_decay": 0.0001,
    "betas": [0.9, 0.999],
    "eps": 1e-8
  },
  "scheduler": {
    "name": "reduce_on_plateau",
    "mode": "max",
    "factor": 0.5,
    "patience": 10,
    "min_lr": 1e-6
  },
  "training": {
    "epochs": 50,
    "use_amp": false,
    "vis_freq": 10,
    "validate_every": 1,
    "save_best_only": true,
    "gradient_clipping": 1.0
  },
  "callbacks": {
    "early_stopping": {
      "patience": 15,
      "min_delta": 0.001,
      "mode": "max",
      "monitor": "val_dice"
    },
    "model_checkpoint": {
      "monitor": "val_dice",
      "mode": "max",
      "save_top_k": 3
    }
  },
  "output_dir": "runs/lightweight_models",
  "logging": {
    "tensorboard": false,
    "log_every": 20,
    "save_predictions": false
  }
}
