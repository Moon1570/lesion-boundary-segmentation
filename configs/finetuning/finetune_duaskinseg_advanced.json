{
  "experiment_name": "duaskinseg_advanced_finetune",
  "base_model": {
    "checkpoint_path": "runs/duaskinseg_advanced/checkpoints/best_model_20250902_211024_dice_0.8785.pth",
    "architecture": "duaskinseg",
    "baseline_dice": 0.8785
  },
  "model": {
    "name": "duaskinseg",
    "in_channels": 3,
    "out_channels": 1,
    "embed_dim": 768,
    "depth": 12,
    "num_heads": 12,
    "dropout": 0.05
  },
  "finetune_strategy": {
    "freeze_stages": [
      {
        "stage": "mobilenet_encoder",
        "epochs": 10,
        "freeze": true
      },
      {
        "stage": "vit_encoder.patch_embed",
        "epochs": 15,
        "freeze": true
      },
      {
        "stage": "all_encoders",
        "epochs": 25,
        "freeze": false
      }
    ],
    "layer_wise_lr": {
      "mobilenet_encoder": 5e-6,
      "vit_encoder": 1e-5,
      "decoder": 2e-5,
      "fusion_layers": 3e-5
    }
  },
  "data": {
    "data_dir": "data/ISIC2018_advanced",
    "splits_dir": "splits",
    "batch_size": 3,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true,
    "enhanced_augmentation": true,
    "tta_enabled": true
  },
  "augmentation": {
    "horizontal_flip": 0.5,
    "vertical_flip": 0.3,
    "rotation_degrees": 45,
    "color_jitter": {
      "brightness": 0.3,
      "contrast": 0.3,
      "saturation": 0.3,
      "hue": 0.1
    },
    "gaussian_blur": 0.2,
    "elastic_transform": 0.3,
    "grid_distortion": 0.2,
    "cutout": {
      "probability": 0.3,
      "max_holes": 3,
      "max_size": 32
    }
  },
  "loss": {
    "name": "advanced_combined",
    "weights": {
      "bce": 0.3,
      "dice": 0.25,
      "focal": 0.2,
      "boundary": 0.15,
      "tversky": 0.1
    },
    "focal_alpha": 0.75,
    "focal_gamma": 2.0,
    "tversky_alpha": 0.3,
    "tversky_beta": 0.7,
    "boundary_weight": 3.0,
    "sigmoid": true
  },
  "optimizer": {
    "name": "adamw",
    "lr": 5e-6,
    "weight_decay": 0.005,
    "betas": [0.9, 0.999],
    "eps": 1e-8
  },
  "scheduler": {
    "name": "cosine_restart",
    "T_0": 15,
    "T_mult": 2,
    "eta_min": 1e-7,
    "warmup_epochs": 3
  },
  "training": {
    "epochs": 50,
    "use_amp": true,
    "gradient_clip_val": 0.5,
    "accumulate_grad_batches": 4,
    "vis_freq": 3,
    "save_freq": 5
  },
  "callbacks": {
    "early_stopping": {
      "patience": 15,
      "min_delta": 0.0001,
      "monitor": "val_dice"
    },
    "reduce_lr_on_plateau": {
      "factor": 0.5,
      "patience": 8,
      "min_lr": 1e-8,
      "monitor": "val_dice",
      "mode": "max"
    },
    "model_checkpoint": {
      "monitor": "val_dice",
      "save_top_k": 3,
      "mode": "max",
      "save_weights_only": false
    }
  },
  "validation": {
    "interval": 1,
    "tta_enabled": true,
    "save_predictions": true,
    "compute_boundary_metrics": true
  },
  "logging": {
    "wandb": false,
    "tensorboard": true,
    "console_level": "INFO",
    "save_model_graph": true
  },
  "hardware": {
    "device": "cuda",
    "mixed_precision": "fp16",
    "compile_model": false
  }
}