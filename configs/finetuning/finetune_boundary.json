{
  "model": {
    "name": "unetmamba",
    "n_channels": 3,
    "n_classes": 1,
    "comment": "Boundary-focused fine-tuning for precise lesion boundaries"
  },
  "data": {
    "data_dir": "data/ISIC2018_proc",
    "splits_dir": "splits",
    "batch_size": 8,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true,
    "use_test_split": false,
    "augmentations": {
      "enabled": true,
      "rotation": 30,
      "flip_prob": 0.5,
      "brightness": 0.15,
      "contrast": 0.15,
      "hue": 0.05,
      "saturation": 0.15,
      "elastic_transform": true,
      "gaussian_noise": 0.015,
      "edge_enhancement": true
    }
  },
  "loss": {
    "name": "advanced_combined",
    "weights": {
      "bce": 0.1,
      "focal": 0.4,
      "dice": 0.2,
      "tversky": 0.1,
      "iou": 0.1,
      "boundary": 0.1
    },
    "focal_alpha": 1.0,
    "focal_gamma": 4.0,
    "tversky_alpha": 0.1,
    "tversky_beta": 0.9,
    "boundary_weight": 2.0
  },
  "optimizer": {
    "name": "adamw",
    "lr": 3e-6,
    "weight_decay": 5e-7,
    "betas": [0.9, 0.999],
    "eps": 1e-8
  },
  "scheduler": {
    "name": "cosine_warmup",
    "warmup_epochs": 5,
    "T_max": 60,
    "eta_min": 1e-9,
    "warmup_factor": 0.05
  },
  "training": {
    "epochs": 60,
    "use_amp": true,
    "vis_freq": 5,
    "validate_every": 1,
    "save_best_only": false,
    "gradient_clipping": 0.2,
    "label_smoothing": 0.01
  },
  "callbacks": {
    "early_stopping": {
      "patience": 25,
      "min_delta": 0.00002,
      "mode": "max",
      "monitor": "val_dice"
    },
    "model_checkpoint": {
      "monitor": "val_dice",
      "mode": "max",
      "save_top_k": 15
    },
    "reduce_lr": {
      "monitor": "val_dice",
      "factor": 0.3,
      "patience": 12,
      "min_lr": 1e-10,
      "mode": "max"
    }
  },
  "finetune_stage": "boundary_focused",
  "boundary_weight": 0.5,
  "output_dir": "runs/finetune_unetmamba_boundary",
  "logging": {
    "tensorboard": true,
    "log_every": 3,
    "save_predictions": true
  }
}
