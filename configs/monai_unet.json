{
  "model": {
    "name": "monai_unet",
    "in_channels": 3,
    "out_channels": 1,
    "channels": [32, 64, 128, 256, 512],
    "strides": [2, 2, 2, 2]
  },
  "data": {
    "data_dir": "data/ISIC2018_proc",
    "splits_dir": "splits",
    "batch_size": 8,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true
  },
  "loss": {
    "name": "dice",
    "smooth": 1.0,
    "sigmoid": true
  },
  "optimizer": {
    "name": "adam",
    "lr": 0.001,
    "weight_decay": 1e-4,
    "betas": [0.9, 0.999]
  },
  "scheduler": {
    "name": "plateau",
    "factor": 0.5,
    "patience": 10
  },
  "training": {
    "epochs": 100,
    "use_amp": true,
    "vis_freq": 10
  },
  "callbacks": {
    "early_stopping": {
      "patience": 25,
      "min_delta": 1e-4,
      "mode": "min"
    }
  },
  "output_dir": "runs/training_monai_unet"
}
