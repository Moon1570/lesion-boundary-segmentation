{
  "model": {
    "name": "hypermamba",
    "variant": "lightweight",
    "n_channels": 3,
    "n_classes": 1,
    "comment": "HyperMamba Lightweight: ~4.8M params, designed to surpass DermoMamba"
  },
  "data": {
    "data_dir": "data/ISIC2018_proc",
    "splits_dir": "splits",
    "batch_size": 12,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true,
    "use_test_split": false,
    "augmentations": {
      "enabled": true,
      "rotation": 20,
      "flip_prob": 0.5,
      "brightness": 0.15,
      "contrast": 0.15,
      "hue": 0.05,
      "saturation": 0.15,
      "elastic_transform": true,
      "gaussian_noise": 0.01
    }
  },
  "loss": {
    "name": "advanced_combined",
    "weights": {
      "bce": 0.25,
      "focal": 0.25,
      "dice": 0.25,
      "tversky": 0.15,
      "iou": 0.10
    },
    "focal_alpha": 1.0,
    "focal_gamma": 2.5,
    "tversky_alpha": 0.3,
    "tversky_beta": 0.7
  },
  "optimizer": {
    "name": "adamw",
    "lr": 0.0005,
    "weight_decay": 0.0005,
    "betas": [0.9, 0.999],
    "eps": 1e-8
  },
  "scheduler": {
    "name": "cosine_warmup",
    "warmup_epochs": 8,
    "T_max": 120,
    "eta_min": 1e-8,
    "warmup_factor": 0.1
  },
  "training": {
    "epochs": 120,
    "use_amp": true,
    "vis_freq": 5,
    "validate_every": 1,
    "save_best_only": false,
    "gradient_clipping": 1.0,
    "label_smoothing": 0.05
  },
  "callbacks": {
    "early_stopping": {
      "patience": 25,
      "min_delta": 0.0001,
      "mode": "max",
      "monitor": "val_dice"
    },
    "model_checkpoint": {
      "monitor": "val_dice",
      "mode": "max",
      "save_top_k": 5
    },
    "reduce_lr": {
      "monitor": "val_dice",
      "factor": 0.5,
      "patience": 15,
      "min_lr": 1e-9,
      "mode": "max"
    }
  },
  "output_dir": "runs/hypermamba_lightweight",
  "logging": {
    "tensorboard": true,
    "log_every": 10,
    "save_predictions": true
  }
}
