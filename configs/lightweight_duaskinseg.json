{
  "model": {
    "name": "lightweight_duaskinseg",
    "in_channels": 3,
    "out_channels": 1,
    "embed_dim": 384,
    "depth": 6,
    "num_heads": 6,
    "dropout": 0.1
  },
  "data": {
    "data_dir": "data/ISIC2018_advanced",
    "splits_dir": "splits",
    "batch_size": 16,
    "num_workers": 4,
    "image_size": 384,
    "pin_memory": true
  },
  "loss": {
    "name": "combined",
    "weights": {
      "bce": 0.5,
      "dice": 0.3,
      "boundary": 0.2
    },
    "sigmoid": true
  },
  "optimizer": {
    "name": "adamw",
    "lr": 0.001,
    "weight_decay": 0.01,
    "betas": [0.9, 0.999]
  },
  "scheduler": {
    "name": "cosine",
    "T_max": 50,
    "eta_min": 1e-6
  },
  "training": {
    "epochs": 100,
    "use_amp": true,
    "vis_freq": 5
  },
  "callbacks": {
    "early_stopping": {
      "patience": 15,
      "min_delta": 1e-4,
      "mode": "min"
    }
  },
  "output_dir": "runs/lightweight_duaskinseg"
}
