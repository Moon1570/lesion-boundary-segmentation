{
  "model": {
    "name": "monai_unet",
    "in_channels": 3,
    "out_channels": 1,
    "channels": [32, 64, 128, 256, 512],
    "strides": [2, 2, 2, 2]
  },
  "data": {
    "data_dir": "data/ISIC2018_proc",
    "splits_dir": "splits",
    "batch_size": 8,
    "num_workers": 0,
    "image_size": 384,
    "pin_memory": true,
    "use_test_split": false
  },
  "loss": {
    "name": "combined",
    "weights": {
      "bce": 0.5,
      "dice": 0.3,
      "boundary": 0.2
    },
    "sigmoid": true
  },
  "optimizer": {
    "name": "adamw",
    "lr": 0.001,
    "weight_decay": 0.01,
    "betas": [0.9, 0.999]
  },
  "scheduler": {
    "name": "cosine",
    "T_max": 200,
    "eta_min": 1e-6
  },
  "training": {
    "epochs": 200,
    "use_amp": true,
    "vis_freq": 5,
    "validate_every": 1,
    "save_best_only": true
  },
  "callbacks": {
    "early_stopping": {
      "patience": 20,
      "min_delta": 0.0001,
      "mode": "min",
      "monitor": "val_loss"
    },
    "model_checkpoint": {
      "monitor": "val_dice",
      "mode": "max",
      "save_top_k": 3
    },
    "reduce_lr": {
      "monitor": "val_loss",
      "factor": 0.5,
      "patience": 10,
      "min_lr": 1e-7
    }
  },
  "output_dir": "runs/monai_unet",
  "logging": {
    "tensorboard": true,
    "log_every": 10,
    "save_predictions": true
  }
}
